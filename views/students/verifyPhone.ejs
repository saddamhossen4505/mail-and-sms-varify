<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <a class="btn btn-warning btn-sm" href="/student">Back</a>
            <br>
            <br>
            <div class="card shadow">
                <div class="card-body">
                    <div id="single" class="my-3">
                        <label for="">Photo</label>
                        <img src="/images/studentPhoto/<%= student.photo %> " alt="">
                    </div>
                    <div class="my-3 text-center">
                        <p>Name : <%= student.name %> </p>
                        <p>Email : <%= student.email %> </p>
                        <p>Cell : <%= student.cell %> </p>
                        <p>Location : <%= student.location %> </p>
                    </div>
                    <form action="/student/phone/<%= student.id %> " method="post">
                        <div class="my-3">
                            <label for="">Input here code</label>
                            <input name="otp" type="text" class="form-control">
                        </div>
                        <div class="my-3">
                            <input class="btn btn-sm btn-primary w-100" type="submit" value="Verify-Now">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>