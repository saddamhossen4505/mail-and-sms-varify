
<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <a class="btn btn-primary btn-sm" href="/student/unverify">Back to UnverifyData-Table</a>
            <a class="btn btn-warning btn-sm" href="/student">Back to VerifyData-Table</a>
            <br>
            <br>
            <div class="card shadow">
                <div class="card-body">
                    <h2>Add NewStudent</h2>
                    <hr>
                    <form action="/student/create" method="post" enctype="multipart/form-data" id="student_form">
                        <div class="my-3">
                            <label for="">Name</label>
                            <input type="text" name="name" class="form-control">
                        </div>
                        <div class="my-3">
                            <label for="">Email</label>
                            <input type="text" name="email" class="form-control">
                        </div>
                        <div class="my-3">
                            <label for="">Cell</label>
                            <input type="text" name="cell" class="form-control">
                        </div>
                        <div class="my-3">
                            <label for="">Location</label>
                            <select class="form-control" name="location" id="">
                                <option>-Select-</option>
                                <option value="Gaibandha">Gaibandha</option>
                                <option value="Rangpur">Rangpur</option>
                                <option value="Dinajpur">Dinajpur</option>
                                <option value="Dhaka">Dhaka</option>
                                <option value="Bogura">Bogura</option>
                                <option value="Lalmonirhat">Lalmonirhat</option>
                            </select>
                        </div>
                        <div class="my-3">
                            <label for="">Photo</label>
                            <label for="student_photo_field">
                                <img id="photo_icom" src="https://cdn4.iconfinder.com/data/icons/ionicons/512/icon-image-512.png" alt="">
                            </label>
                            <br>
                            <img id="preview_img" src="" alt="">
                            <br>
                            <input id="student_photo_field" type="file" name="student_photo_field" class="form-control">
                        </div>
                        <div class="my-3">
                            <input type="submit" value="Add-Now" class="btn btn-sm btn-primary w-100">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>