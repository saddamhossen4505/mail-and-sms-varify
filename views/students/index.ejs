<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <a class="btn btn-primary btn-sm" href="/student/create">Add NewStudent</a>
            <a class="btn btn-warning btn-sm" href="/student/unverify">UnVerifyStudent</a>
            <br>
            <br>
        </div>
        <% allStudents.forEach(student => { %>
            <div class="col-md-3">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <div class="verify_student_info">
                            <img src="/images/studentPhoto/<%= student.photo %> " alt="">
                            <h2><%= student.name %> </h2>
                            <p><%= student.cell %> </p>
                            <hr>
                            <a class="btn btn-info btn-sm" href="/student/<%= student.id %> ">View</a>
                        </div>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
</div>